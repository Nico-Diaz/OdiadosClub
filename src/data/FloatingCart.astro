<div id="cart-container" class="cart-wrapper hidden">
    <div class="cart-deco-top"></div>

    <div class="cart-inner">
        
        <div class="delivery-section">
            <label for="delivery-method" class="delivery-label">M√âTODO DE ENTREGA:</label>
            <div class="select-wrapper">
                <select id="delivery-method" class="delivery-select">
                    <option value="Take Away">ü•° RETIRO POR LOCAL</option>
                    <option value="Delivery">üõµ ENV√çO A DOMICILIO</option>
                </select>
                <span class="select-arrow">‚ñº</span>
            </div>
        </div>

        <div class="actions-section">
            
            <div class="info-group">
                <button id="btn-cancel" class="btn-cancel" title="Vaciar carrito">‚úï</button>
                <div class="total-wrapper">
                    <span class="total-label">TOTAL ESTIMADO</span>
                    <span class="total-amount">$<span id="cart-total">0</span></span>
                </div>
            </div>
            
            <button id="btn-checkout" class="btn-checkout">
                CONFIRMAR <span class="arrow">‚Üí</span>
            </button>
        </div>
    </div>
</div>

<script>
    import { cartItems } from '../../store/cart';

    // Referencias seguras al DOM
    const container = document.getElementById('cart-container');
    const totalSpan = document.getElementById('cart-total');
    const checkoutBtn = document.getElementById('btn-checkout');
    const cancelBtn = document.getElementById('btn-cancel');

    // 1. ESCUCHAR CAMBIOS EN EL CARRITO
    cartItems.subscribe(items => {
        if (!container) return; // Protecci√≥n

        if (items.length > 0) {
            container.classList.remove('hidden');
            // Calcular Total
            const total = items.reduce((acc, item) => acc + (item.price * item.quantity), 0);
            if (totalSpan) totalSpan.innerText = total.toLocaleString(); // Agrega puntos de mil (12.000)
        } else {
            container.classList.add('hidden');
        }
    });

    // 2. BOT√ìN CANCELAR
    cancelBtn?.addEventListener('click', () => {
        // Usamos confirm nativo
        if(confirm('¬øBorrar todo el pedido?')) {
            cartItems.set([]); 
        }
    });

    // 3. BOT√ìN CONFIRMAR (CHECKOUT)
    if (checkoutBtn) {
        checkoutBtn.addEventListener('click', async () => {
            const items = cartItems.get();
            if (items.length === 0) return;

            // Obtener env√≠o
            const deliverySelect = document.getElementById('delivery-method') as HTMLSelectElement;
            const deliveryMethod = deliverySelect ? deliverySelect.value : 'No especificado';

            // UI de carga
            const originalText = checkoutBtn.innerHTML;
            checkoutBtn.innerText = "ENVIANDO...";
            checkoutBtn.setAttribute('disabled', 'true');
            checkoutBtn.style.opacity = '0.7';

            try {
                const response = await fetch('/api/order', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ 
                        items: items, 
                        deliveryMethod: deliveryMethod 
                    }), 
                });

                const data = await response.json();
                
                if (data.success) {
                    cartItems.set([]); // Vaciar
                    window.location.href = data.redirectUrl; // Ir a WhatsApp
                } else {
                    alert('Error del servidor: ' + (data.error || 'Desconocido'));
                    restoreBtn();
                }
            } catch (error) {
                console.error(error);
                alert('Error de conexi√≥n. Revisa tu internet.');
                restoreBtn();
            }

            function restoreBtn() {
                if(checkoutBtn) {
                    checkoutBtn.innerHTML = originalText;
                    checkoutBtn.removeAttribute('disabled');
                    checkoutBtn.style.opacity = '1';
                }
            }
        });
    }
</script>

