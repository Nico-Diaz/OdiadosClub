---
import '../styles/global.css';
import FloatingCart from '../components/ui/FloatingCart.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Odiados Club - Burgers" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main class="app-container">
			<slot />
        <FloatingCart /> </main>
		
	</body>
</html>

<style>
  /* Aqu√≠ definimos el contenedor del celular */
  .app-container {
    max-width: var(--max-width);
    margin: 0 auto; /* Centrar en pantallas grandes */
    min-height: 100vh;
    background-color: var(--color-black);
    position: relative;
    border-left: 1px solid #333;
    border-right: 1px solid #333;
    box-shadow: 0 0 50px rgba(214, 0, 0, 0.1); /* Resplandor rojo sutil */
  }
</style>